#!/bin/sh

echo "chorusmerge"

if [ -e `dirname $0`/ChorusMerge.dll ]
then
	echo "Found DLL. Running ChorusMerge.dll with dotnet..."
	exec dotnet `dirname $0`/ChorusMerge.dll "$@"
else
	echo "DLL not found. Running ChorusMerge.exe with dotnet run..."
	exec dotnet run `dirname $0`/ChorusMerge.exe "$@"
fi
